<div class="container">
    <div class="row">
        {{#each products}}
            <div class="col md-4">
                <div class="card">
                    <img src="{{this.thumbnail}}" class="img-fluid" alt="{{this.title}}">
                    <div class="card-body text-center">
                        <p class="card-text">{{this.title}}<br>${{this.price}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>